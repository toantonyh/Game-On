<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Darkprimarycolor"
    tools:context="com.example.ttpm.game_on.fragments.UserProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/user_profile_welcome_message"
        android:layout_alignParentTop="true"
        android:paddingTop="16dp"
        android:paddingLeft="6dp"
        android:layout_centerHorizontal="true"

        android:textSize="16sp" />

    <com.parse.ParseImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/user_profile_profile_parse_image_view"
        android:layout_below="@+id/user_profile_welcome_message"
        android:layout_centerHorizontal="true"
        android:contentDescription="Profile Picture"
        android:layout_marginTop="60dp"
        android:layout_above="@+id/user_profile_change_profile_picture_button"
        android:background="#000000"
        android:padding="1dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:id="@+id/user_profile_change_profile_picture_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
         />

</RelativeLayout>
