<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Darkprimarycolor"
    tools:context="com.example.ttpm.game_on.fragments.UserProfileFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/user_profile_welcome_message"
        android:layout_alignParentTop="true"
        android:paddingTop="16dp"
        android:paddingLeft="6dp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_profile_image_view"
        android:layout_below="@+id/user_profile_welcome_message"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:padding="1dp"
        android:src="@drawable/com_parse_ui_facebook_login_logo"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        tools:background="@color/wallet_dim_foreground_inverse_disabled_holo_dark" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_profile_image_view"
        android:id="@+id/user_profile_change_profile_picture_button"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_menu_camera" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/user_profile_coordinator_layout"
        android:layout_alignParentBottom="true">
    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
