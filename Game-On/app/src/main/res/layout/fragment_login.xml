<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:gravity="center_vertical"
        android:layout_above="@+id/login_login_button">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_username_edittext"
            android:hint="@string/fragment_login_username"
            android:textStyle="bold"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Email Address"
            app:met_floatingLabelTextSize="18sp"
            app:met_primaryColor="#FF5722"
            app:met_underlineColor="#FFAB91"
            app:met_textColorHint="#FFFFFF"
            app:met_textColor="#FFFFFF" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:id="@+id/login_password_edittext"
            android:hint="@string/fragment_login_password"
            android:textStyle="bold"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Password"
            app:met_floatingLabelTextSize="18sp"
            app:met_primaryColor="#FF5722"
            app:met_underlineColor="#FFAB91"
            app:met_textColorHint="#FFFFFF"
            app:met_textColor="#FFFFFF" />

    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:fb_text="@string/fragment_login_login_button"
        android:id="@+id/login_login_button"
        android:layout_above="@+id/login_forgot_password_button"
        app:fb_textColor="#FFFFFF"
        app:fb_textSize="32sp"
        app:fb_defaultColor="@color/colorPrimaryLight"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:fb_text="@string/fragment_login_forgot_password_button"
        android:id="@+id/login_forgot_password_button"
        android:layout_alignParentBottom="true"
        app:fb_textColor="#FFFFFF"
        app:fb_textSize="32sp"
        app:fb_defaultColor="#f44336"/>

</RelativeLayout>
